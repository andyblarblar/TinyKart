<?xml version="1.0"?>
<robot name="tinykart">

<!-- Base footprint -->
    <link name="base_footprint"/>
    
<!--Chassis link and joint -->    
    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.55245 0.19 0.02"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.55245 0.19 0.02"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia
                ixx="0.00266963" ixy="0.0" ixz="0.0"
                iyy="0.000315771" iyz="0.0"
                izz="0.0"/>
        </inertial>
    </link>
    
    <joint name="base_footprint_to_base_link" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.09525"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>
    
    
<!-- Wheel links and joints -->
    
    <!-- Left wheel link and joint -->
    <link name="left_front_wheel">
        <visual>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <mass value="0.1"/>
            <inertia
                ixx="0.017189" ixy="0.0" ixz="0.0"
                iyy="0.017189" iyz="0.0"
                izz="0.030628"/>
        </inertial>
    </link>

    <!-- The joint where the left wheel pivots about -->
    <link name="left_front_wheel_rack">
    <!-- These visuals are needed, else gazebo crashes -->
    <visual>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.0825"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <mass value="1.125"/>
            <inertia
                ixx="0.017189" ixy="0.0" ixz="0.0"
                iyy="0.017189" iyz="0.0"
                izz="0.030628"/>
        </inertial>
    </link>

    <joint name="left_front_wheel_steer" type="revolute">
        <origin rpy="0 0 0" xyz=" 0.1425 0.135 -0.0508"/>
        <parent link="base_link"/>
        <child link="left_front_wheel_rack"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.6" upper="+0.6" velocity="10.0" effort="25"/>
    </joint>
    
    <joint name="left_front_wheel_rack_to_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0 -0.00001 0"/>
        <parent link="left_front_wheel_rack"/>
        <child link="left_front_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <!-- Right wheel link and joint -->
    <link name="right_front_wheel">
        <visual>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.0825"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.0825"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <mass value="1.125"/>
            <inertia
                ixx="0.017189" ixy="0.0" ixz="0.0"
                iyy="0.017189" iyz="0.0"
                izz="0.030628"/>
        </inertial>
    </link>

    <!-- The joint where the right wheel pivots about -->
    <link name="right_front_wheel_rack">
    <!-- These visuals are needed, else gazebo crashes -->
    <visual>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.0825"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <mass value="1.125"/>
            <inertia
                ixx="0.017189" ixy="0.0" ixz="0.0"
                iyy="0.017189" iyz="0.0"
                izz="0.030628"/>
        </inertial>
    </link>
    
    <joint name="right_front_wheel_steer" type="revolute">
        <origin rpy="0 0 0" xyz="0.1425 -0.135 -0.0508"/>
        <parent link="base_link"/>
        <child link="right_front_wheel_rack"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.6" upper="+0.6" velocity="10.0" effort="25"/>
    </joint> 
    
    <joint name="right_front_wheel_rack_to_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0 -0.00001 0"/>
        <parent link="right_front_wheel_rack"/>
        <child link="right_front_wheel"/>
        <axis xyz="0 1 0"/>
    </joint> 
    
    <!-- Right rear wheel link and joint -->
    <link name="right_rear_wheel">
        <visual>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <mass value="0.1"/>
            <inertia
                ixx="0.017189" ixy="0.0" ixz="0.0"
                iyy="0.017189" iyz="0.0"
                izz="0.030628"/>
        </inertial>
    </link>
    
    <joint name="right_rear_wheel_to_base_link" type="continuous">
        <origin rpy="0 0 0" xyz="-0.140575 -0.095 -0.054"/>
        <parent link="base_link"/>
        <child link="right_rear_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <!-- Left rear wheel link and joint -->
    <link name="left_rear_wheel">
        <visual>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.5708 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <mass value="0.1"/>
            <inertia
                ixx="0.017189" ixy="0.0" ixz="0.0"
                iyy="0.017189" iyz="0.0"
                izz="0.030628"/>
        </inertial>
    </link>
    
    <joint name="left_rear_wheel_to_base_link" type="continuous">
        <origin rpy="0 0 0" xyz="-0.140575 0.095 -0.054"/>
        <parent link="base_link"/>
        <child link="left_rear_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>
    
<!-- Sensors -->

  <!-- Lidar Link and joint -->
    <link name="laser_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1524" radius="0.0762"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1524" radius="0.0762"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0"/>
            <inertia
                ixx="0.003387" ixy="0.0" ixz="0.0"
                iyy="0.003387" iyz="0.0"
                izz="0.002903"/>
        </inertial>
    </link>
    
    <joint name="laser_to_base_link" type="fixed">
        <origin rpy="0 0 0" xyz="0.2722 0 0.3556"/>
        <parent link="base_link"/>
        <child link="laser_link"/>
    </joint>
    
    
  <!-- Imu link, joint, and sensor component -->
    <link name="imu_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.0254 0.0254 0.0254"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.0254 0.0254 0.0254"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia
                ixx="5.4e-05" ixy="0.0" ixz="0.0"
                iyy="5.4e-05" iyz="0.0"
                izz="0.000108"/>
        </inertial>
    </link>
    
    <joint name="imu_link_to_base_link" type="fixed">
        <origin rpy="0 0 0" xyz="-0.012 0 0.5588"/>
        <parent link="base_link"/>
        <child link="imu_link"/>
    </joint>

<!-- Gazebo Plugins -->
    
  <gazebo>
    <plugin filename="libignition-gazebo-ackermann-steering-system.so"
              name="ignition::gazebo::systems::AckermannSteering">
      <left_steering_joint>left_front_wheel_steer</left_steering_joint>
      <left_joint>left_rear_wheel_to_base_link</left_joint>

      <right_steering_joint>right_front_wheel_steer</right_steering_joint>
      <right_joint>right_rear_wheel_to_base_link</right_joint>

      <wheel_separation>0.45</wheel_separation>
      <wheel_radius>0.165</wheel_radius>
      <odom_publish_frequency>20</odom_publish_frequency>

      <min_velocity>-10</min_velocity>
      <max_velocity>10</max_velocity>
      <min_acceleration>-30</min_acceleration>
      <max_acceleration>30</max_acceleration>

      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
    </plugin>
  </gazebo> 
    
  <gazebo reference="laser_link">
    <sensor type="gpu_lidar" name="laser_link">
      <topic>lidar</topic>
      <update_rate>20</update_rate>
      <lidar>
        <scan>
          <horizontal>
            <samples>1024</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
          <vertical>
            <samples>32</samples>
            <resolution>1</resolution>
            <min_angle>-0.261799</min_angle>
            <max_angle>0.261799</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.08</min>
          <max>10.0</max>
          <resolution>0.05</resolution>
        </range>
      </lidar>
      <alwaysOn>1</alwaysOn>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
        <always_on>1</always_on>
        <update_rate>1</update_rate>
        <visualize>true</visualize>
        <topic>imu</topic>
        <enable_metrics>true</enable_metrics>
    </sensor>
  </gazebo>
  <!--Gets joint states from gazebo model so that they can be sent to ros2 over ign_bridge
  <gazebo>
    <plugin filename="libignition-gazebo-joint-state-publisher-system.so" name="ignition::gazebo::systems::JointStatePublisher"/>
  </gazebo> -->
</robot>
            